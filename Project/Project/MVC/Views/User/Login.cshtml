@using Application.Models.User

@model UserLoginModel;

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>

</head>
<body>


    <div class="login-container">
        <h2>Login</h2>
        <form asp-controller="User" asp-action="Login" method="post" class="login-form">
            <div class="form-group">
                <label asp-for=@Model.Email>Email:</label>
                <input asp-for=@Model.Email type="text" required />
                <span asp-validation-for=@Model.Email class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=@Model.Password>Password:</label>
                <input asp-for=@Model.Password type="password" required />
                <span asp-validation-for=@Model.Password class="text-danger"></span>
            </div>
            <button type="submit" class="button-29">Login</button>
        </form>
        <a asp-controller="User" asp-action="Register">Register</a>
    </div>
</body>
</html>
